<!DOCTYPE html>
<html>
<head>

  <style media="screen">
  table, th, td{
    border: 2px solid black;
    border-collapse: collapse;

  }

  th, td{
    padding: 10px;
  }

  .drive{
    background: #880030;
  }

  .tbl{
    margin-left: auto;
    margin-right: auto;
    background-color: #83C500;
  }

  .hd1{
    color: white;
    font-size: 2.5em;
  }

  </style>
</head>

<body class="drive">



<div class="container">
<h2 class="hd1">All Users</h2>


<ul>
  <table class="tbl">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
    </tr>
   <% rows.forEach(function(r) { %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.name %></td>
        <td><%= r.email %></td>
        <td><%= r.status %></td>
      </tr>
    <% }); %>
  </table>

</ul>

</div>

</body>
</html>
