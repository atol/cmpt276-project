<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="../infoMapScript.js"></script>
    <link rel="stylesheet" href="../stylesheets/infoMap.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Info Map - <%= uname %></title>
</head>
<body>
    <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <img src="../image/defaultdp.png" width="50px" height="50px">
            <p id="Username"><%= uname %></p></br>
            <a href="#"><button class="options">Back to Home</button></a></br>
            <a href="/logout"><button class="options">Log Out</button></a>
    </div>
    
    <button class="openbtn" onclick="openNav()">&#9776; Menu</button>

    <div id="map"></div>

    <script>
        function myMap() {

            var mapProp= {
                center:new google.maps.LatLng(51.508742,-0.120850),
                zoom:3,
                mapId:'35374d60c2b1cadb'
            };

            var myLatlng = {lat: 44.723334, lng: -38.818859};

            var map = new google.maps.Map(document.getElementById("map"),mapProp);

            // Create the initial InfoWindow.
            var infoWindow = new google.maps.InfoWindow({content: 'Click the map to get Lat/Lng!', position: myLatlng});
            var geocoder = new google.maps.Geocoder();

            infoWindow.open(map);
            infoWindow.close();

            // Configure the click listener.
            map.addListener('click', function(mapsMouseEvent) {
                // Close the current InfoWindow.
                infoWindow.close();

                // Create a new InfoWindow.
                infoWindow = new google.maps.InfoWindow({position: mapsMouseEvent.latLng});

                var coordinates = mapsMouseEvent.latLng.toString();

                console.log(mapsMouseEvent.latLng.toString());

                geocodeLatLng(geocoder, map, infoWindow, coordinates);

                infoWindow.setContent(mapsMouseEvent.latLng.toString());
                infoWindow.open(map);
            });

        }

        function geocodeLatLng(geocoder, map, infowindow, coords) {
            var input = coords;
            var latlngStr = input.split(",", 2);

            var lati = latlngStr[0];
            var longi = latlngStr[1];

            console.log(lati);

            var lati1 = lati.replace('(', '');

            console.log(lati1);
            console.log(longi);

            var latlng = { lat: parseFloat(lati1), lng: parseFloat(longi) };
            geocoder.geocode({ location: latlng }, function(results, status) {
                if (status === "OK") {
                    if (results[0]) {
                        // map.setZoom(11);
                        var marker = new google.maps.Marker({
                            position: latlng,
                            map: map    
                        });
                        infowindow.setContent(results[0].formatted_address);
                        infowindow.open(map, marker);
                    } 
                    else {
                        window.alert("No results found");
                    }
                } 
                else {
                    window.alert("Geocoder failed due to: " + status);
                }
            });
        }
    </script>
    
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKJAI9tI-QuFAA5qyPg9p0nuy4kzMCa_Y&callback=myMap"></script>

</body>
</html>