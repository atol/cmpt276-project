<!DOCTYPE html>
<html>
<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    text-align: center;
}
table, th, td{
    border: 2px solid whitesmoke;
    border-collapse: collapse;
  }
</style>
</head>

<body>
<h4>Friend Requests Received From </h4>

<ul>
  <table class="tbl">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Accept</th>
      <th>Decline</th>
    </tr>
   <% rows.forEach(function(r) { %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.email %></td>
        <td><form action="/friends/requests/accept/<%=r.id%>" method="POST">
          <input type="submit" value="Accept">
          </form>
        </td>
        <td><form action="/friends/requests/decline/<%=r.id%>" method="POST">
          <input type="submit" value="Decline">
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

</ul>
<br>
<br>
<a href="/friends/requests/sent">Click here to view sent friend requests</a>
<br><br>
<a href="/friends">Click here to view all friends or add one</a>
<br><br>
<a href="/dashboard">Click here to return to the Dashboard</a>

</body>
</html>
