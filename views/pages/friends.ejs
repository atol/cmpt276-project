<!DOCTYPE html>
<html>
<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    text-align: center;
}
table, th, td{
    border: 2px solid whitesmoke;
    border-collapse: collapse;
  }

</style>
</head>

<body>
<h3>Add a friend by entering their email:</h3>
<form action="/friends/add/" method="post">
    <div class="addfriendbox">
      <input type="text" placeholder="Email" name="email" id="email" required>
    </div>
    <button class="btn" type="submit">Add Friend</button>
</form>
<br>
<h3>Your friends:</h3>
<ul>
  <table class="tbl">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
   <% rows.forEach(function(r) { %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.email %></td>
        <td><form action="/friends/delete/<%=r.id%>" method="POST">
          <input type="submit" value="Delete">
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

</ul>
<br>
<a href="/friends/friendreqs/sent">Click here to view sent friend requests</a>
<br><br>
<a href="/friends/friendreqs/recieved">Click here to view recieved friend requests</a>
<br><br>
<a href="/dashboard">Click here to return to the Dashboard</a>
</body>
</html>
