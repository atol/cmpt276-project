<!DOCTYPE html>
<html>
<head>
</head>

<body>
<h1>Your friends:</h1>
<form action="/friends/add/" method="post">
    <div class="addfriendbox">
      <input type="text" placeholder="Email" name="email" id="email" required>
    </div>
    <button class="btn" type="submit">Add Friend</button>
</form>

<ul>
  <table class="tbl">
    <tr>
      <th>Name</th>
    </tr>
   <% rows.forEach(function(r) { %>
      <tr>
        <td><%= r.name %></td>
      </tr>
    <% }); %>
  </table>

</ul>

</body>
</html>
